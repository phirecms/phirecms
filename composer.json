{
    "name": "phirecms/phirecms",
    "description": "Phire CMS, a robust content management system written in PHP",
    "keywords": [
        "content management system",
        "cms",
        "phire",
        "phire cms",
        "php cms"
    ],
    "homepage": "http://www.phirecms.org/",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Nick Sagona",
            "email": "dev@nolainteractive.com",
            "homepage": "http://www.nolainteractive.com/"
        }
    ],
    "require": {
        "php": ">=7.1.0",
        "popphp/popphp-framework": "^3.8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0.0"
    },
    "autoload" : {
        "psr-4": {
            "Phire\\": "app/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Phire\\Test\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0.x-dev"
        }
    }
}
